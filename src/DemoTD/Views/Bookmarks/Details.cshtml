@using DemoTD.Models
@model Bookmark
@{
     ViewBag.Title = "Bookmark Details";
}

<br />
<br />

@using (Html.BeginForm())
{

	<div class="form-group">
		@Html.LabelFor(b => b.Title) :
		<br />
		@Model.Title
	</div>


	<div class="form-group">
		@Html.LabelFor(b => b.Url) :
		<br />
		@Model.Url
	</div>


	<div class="form-group">
		@Html.LabelFor(b => b.Description) :
		<br />
		@Model.Description
	</div>



	<div class="form-group">
		@Html.LabelFor(b => b.Accept) :
		<br />
		@Model.Accept
	</div>


	<div class="form-group">
		@Html.LabelFor(b => b.NoOfVisits) :
		&nbsp;
		@Model.NoOfVisits
	</div>


	<div class="form-group">
		@Html.ActionLink("Visit Bookmark", "Visit", "Bookmarks", new { id = Model.Id }) |
		@Html.ActionLink("Delete", "Delete", "Bookmarks", new { id = Model.Id })
	</div>
}