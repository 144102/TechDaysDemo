@model DemoTD.Models.Bookmark
@{
    ViewBag.Title = "Create new Bookmark";
}


<br />
<br />

@using (Html.BeginForm())
{

	<div class="form-group">
		@Html.LabelFor(b => b.Title) :
		<br />
		@Html.TextBoxFor(b => b.Title, new { @class = "form-control", style = "max-width: 500px" })
	</div>




	<div class="form-group">
		@Html.LabelFor(b => b.Url) :
		<br />
		@Html.TextBoxFor(b => b.Url, new { @class = "form-control", style = "max-width: 500px" })
	</div>




	<div class="form-group">
		@Html.LabelFor(b => b.Description) :
		<br />
		@Html.TextAreaFor(b => b.Description, new { @class = "form-control", style = "max-width: 500px" })
	</div>




	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-default" />
	</div>
}
